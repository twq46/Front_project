.college-box .college-info {
  display: flex;
}
.college-box .college-info .college-logo image {
  width: 50px;
  height: 50px;
}
.college-box .college-info .info-text .title-code {
  display: flex;
}
.college-box .college-info .info-text .title-code .code {
  color: #579bf8;
  margin-left: 5px;
  font-size: 13px;
}
.college-box .college-info .info-text .title-code .title-info {
  font-weight: 800;
}
.college-box .college-info .info-text .info-type {
  font-size: 11px;
}
.college-box .college-info .info-text .zsnumber-box {
  display: flex;
  justify-content: space-between;
  font-size: 11px;
}
.college-box .college-info .info-text .zsnumber-box .number {
  margin-left: 4px;
  font-weight: 800;
}
.college-box .college-info .info-text .accord-adjust {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  font-size: 13px;
}
.college-box .college-info .info-text .accord-adjust .major {
  text-align: center;
  width: 45%;
  border: 1px solid #ff5639;
  color: #ff5639;
  border-radius: 15px;
  padding: 3px 0;
}
.college-box .college-info .info-text .accord-adjust .adjust .radio-size {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.college-box .college-info .sprint-probability {
  color: #fff;
  width: 45px;
  height: 35px;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px;
}
.college-box .college-info .sprint-probability .sprint {
  font-weight: 800;
}
.college-box .college-info .sprint-probability .probability {
  font-size: 12px;
}
.college-box .college_major {
  background-color: #fffbfc;
  border: 1px solid #ffdbd5;
  margin-top: 10px;
  border-radius: 12px;
  position: relative;
  padding: 10px 5px;
}
.college-box .college_major .admission-rate {
  position: absolute;
  top: 0px;
  right: 0px;
  background-color: #fbe9e7;
  color: #e84a3b;
  padding: 5px;
  font-size: 11px;
  border-radius: 0 12px 0 12px;
}
.college-box .college_major .major-name {
  font-size: 15px;
  font-weight: bold;
}
.college-box .college_major .major-info {
  margin-top: 10px;
  font-size: 12px;
}
.college-box .college_major .zsnumber-add {
  display: flex;
  justify-content: space-between;
  margin: 10px 0;
}
.college-box .college_major .zsnumber-add .zsnumber {
  margin-top: 10px;
}
.college-box .college_major .zsnumber-add .zsnumber text {
  margin-left: 3px;
  font-weight: bold;
}
.college-box .college_major .zsnumber-add .addvolunteer {
  border: 1px solid #ff5639;
  border-radius: 20px;
  padding: 5px;
  color: #ff5639;
  font-weight: bold;
  font-size: 13px;
}
.college-box .college_major .chooseMajor {
  margin-top: 15px;
  display: flex;
  justify-content: space-between;
}
.college-box .college_major .chooseMajor .text-info {
  margin-left: 5px;
  font-weight: bold;
}

