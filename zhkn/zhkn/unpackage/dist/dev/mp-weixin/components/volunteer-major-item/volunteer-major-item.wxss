.college_major {
  background-color: #fffbfc;
  border: 1px solid #ffdbd5;
  margin-top: 10px;
  border-radius: 12px;
  position: relative;
  padding: 10px 5px;
}
.college_major .admission-rate {
  position: absolute;
  top: 0px;
  right: 0px;
  background-color: #fbe9e7;
  color: #e84a3b;
  padding: 5px;
  font-size: 11px;
  border-radius: 0 12px 0 12px;
}
.college_major .major-name {
  font-size: 15px;
  font-weight: bold;
}
.college_major .major-info {
  margin-top: 10px;
  font-size: 12px;
}
.college_major .zsnumber-add {
  display: flex;
  justify-content: space-between;
  margin: 10px 0;
}
.college_major .zsnumber-add .zsnumber {
  margin-top: 10px;
}
.college_major .zsnumber-add .zsnumber text {
  margin-left: 3px;
  font-weight: bold;
}
.college_major .zsnumber-add .addvolunteer {
  border: 1px solid #ff5639;
  border-radius: 20px;
  padding: 5px;
  color: #ff5639;
  font-weight: bold;
  font-size: 13px;
}
.college_major .zsnumber-add .alreadyaddvolunteer {
  border: 1px solid #9d9d9e;
  background-color: #9d9d9e;
  border-radius: 20px;
  padding: 5px;
  color: #fff;
  font-weight: bold;
  font-size: 13px;
}
.college_major .chooseMajor {
  margin-top: 15px;
  display: flex;
  justify-content: space-between;
}
.college_major .chooseMajor .text-info {
  margin-left: 5px;
  font-weight: bold;
}

