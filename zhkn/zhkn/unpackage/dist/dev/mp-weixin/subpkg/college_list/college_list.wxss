.stick-box {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
  background-color: #fff;
}
.college_list-box {
  position: relative;
}
.college_list-box .my-search-box {
  height: 200px;
  background-color: #ef8467;
  display: flex;
  align-items: center;
}
.college_list-box .my-search-box .search {
  width: 100%;
}
.college_list-box .college_major {
  display: flex;
  justify-content: center;
  position: relative;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  box-shadow: 1px 5px 10px #f7f7f7;
  height: 100px;
}
.college_list-box .college_major .canCollege-box {
  display: flex;
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  align-items: center;
  justify-content: space-between;
  padding: 0 10px;
}
.college_list-box .college_major .canCollege-box .canCollege {
  display: flex;
  align-items: center;
}
.college_list-box .college_major .canCollege-box .canCollege .cancollege-img {
  margin-right: 10px;
}
.college_list-box .college_major .canCollege-box .canCollege .cancollege-img image {
  width: 30px;
  height: 30px;
}
.college_list-box .college_major .canCollege-box .canCollege .cancollege-text {
  display: flex;
  flex-direction: column;
}
.college_list-box .college_major .canCollege-box .canCollege .cancollege-text .cancollege-text-top {
  font-size: 20px;
  text-align: center;
}
.college_list-box .college_major .canCollege-box .canCollege .cancollege-text .cancollege-text-bottom {
  color: #999999;
}
.college_list-box .filter-box {
  background-color: #f7f7f7;
  height: 50px;
  display: flex;
  justify-content: space-around;
  position: relative;
  top: -48px;
}
.college_list-box .filter-box .filter-text {
  display: flex;
  align-items: center;
}
.college_list-box .filter-box .filter-text text {
  display: block;
  color: #666666;
  margin-right: 5px;
}
.college_list-box .filter-box .filter-text .active {
  color: #ef845e;
}
.college_list-box .filter-expand {
  position: absolute;
  top: 326px;
  z-index: 2;
  background-color: #fff;
}
.college_list-box .filter-expand .filter-list {
  display: flex;
  flex-wrap: wrap;
}
.college_list-box .filter-expand .filter-list .filter-item {
  width: 21%;
  height: 36px;
  border: 1px solid #edeeef;
  margin: 10px 5px;
  text-align: center;
  line-height: 36px;
  border-radius: 3px;
}
.college_list-box .btn-reset-confirm {
  display: flex;
}
.college_list-box .btn-reset-confirm button {
  width: 45%;
}
.college_list-box .btn-reset-confirm .confirm-btn {
  color: #fff;
  background-color: #ef845e;
}
.college_list-box .collegeName-title {
  display: flex;
  position: relative;
  top: -50px;
  padding: 10px;
  font-size: 18px;
  font-weight: bold;
  justify-content: space-between;
}
.scroll-college {
  position: relative;
  top: -50px;
  z-index: 0;
  margin-top: 55px;
}

